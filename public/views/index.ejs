<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Stock Predictions</title>
  <link rel="stylesheet" href="/css/style.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <style>
    .container {
      max-width: 800px;
      margin: 0 auto;
      padding: 20px;
    }
    
    h2 {
      text-align: center;
      margin-bottom: 30px;
      font-size: 28px;
      color: #333;
    }

    .table-head, .table-body {
      display: flex;
      flex-direction: column;
      width: 100%;
    }

    .table-head div, .table-body div {
      display: flex;
      justify-content: space-between;
      padding: 10px;
      border-bottom: 1px solid #ddd;
    }

    .table-head div {
      background-color: #42cea9;
      color: #ffffff;
      font-size: 18px;
    }

    .table-body div:last-child {
      border-bottom: none;
    }

    .cell {
      flex: 1;
      text-align: center;
    }
  </style>
</head>
<body>
  <div class="container">
    <h2>Stock Predictions</h2>
    <div class="table-head">
      <div>
        <span class="cell">Ticker</span>
        <span class="cell">Linear Predicted Price</span>
        <span class="cell">Quad Predicted Price</span>
        <span class="cell">Cubic Predicted Price</span>
      </div>
    </div>
    <div class="table-body" id="predictions-list">
      <% predictions.forEach(prediction => { %>
        <div class="prediction-row">
          <span class="cell"><%= prediction.ticker %></span>
          <span class="cell">$<%= prediction.linear_predicted_price ? prediction.linear_predicted_price.toFixed(2) : 'N/A' %></span>
          <span class="cell">$<%= prediction.quad_predicted_price ? prediction.quad_predicted_price.toFixed(2) : 'N/A' %></span>
          <span class="cell">$<%= prediction.cubic_predicted_price ? prediction.cubic_predicted_price.toFixed(2) : 'N/A' %></span>
        </div>
      <% }) %>
    </div>
  </div>
  

    <input type="text" id="input" placeholder="Enter ticker symbol">
    <button onclick="fetchPrediction()">Predict</button>

    <script>
      function fetchPrediction() {
        var input = $('#input').val(); // Get the user input
        $.ajax({
          url: '/run-python?input=' + input,
          type: 'GET',
          success: function(response) {
            console.log('Prediction updated');
            $('#input').val(''); // Clear the input field
            updatePredictions(); // Refresh the data from the database
          },
          error: function(error) {
            console.error('Error fetching prediction: ', error);
          }
        });
      }

      function updatePredictions() {
        $.ajax({
          url: '/',
          type: 'GET',
          success: function(response) {
            var newList = $(response).find('.table-body').html();
            $('#predictions-list').html(newList);
          },
          error: function(error) {
            console.error('Error reloading predictions: ', error);
          }
        });
      }
    </script>
  </div>
</body>
</html>
